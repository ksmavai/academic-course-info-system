# Discord Note Sharing Bot Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================
# REQUIRED CONFIGURATION
# ==============================================

# Discord Bot Token (REQUIRED)
# Get this from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here

# AI Chat API Keys (REQUIRED for AI features)
# DeepSeek API - https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Perplexity API (optional, for web search) - https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ==============================================
# OPTIONAL CONFIGURATION
# ==============================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum file size in MB (default: 10MB)
MAX_FILE_SIZE_MB=10

# Watermark opacity (0.1 = very transparent, 1.0 = fully opaque)
WATERMARK_OPACITY=0.15

# Rate limiting settings
MAX_UPLOADS_PER_HOUR=20
MAX_DOWNLOADS_PER_HOUR=50

# Database settings
DATABASE_BACKUP_INTERVAL_HOURS=24
DATABASE_CLEANUP_DAYS=90

# Security settings
ENABLE_IP_LOGGING=false
ENABLE_RATE_LIMITING=true

# Advanced watermarking settings
WATERMARK_FONT_SIZE=24
WATERMARK_SMALL_FONT_SIZE=12
WATERMARK_COLOR_RED=0.7
WATERMARK_COLOR_GREEN=0.7
WATERMARK_COLOR_BLUE=0.7

# File storage settings
MAX_FILES_PER_USER=100
CLEANUP_TEMP_FILES=true

# Admin settings
ADMIN_ROLE_NAME=Admin
MODERATOR_ROLE_NAME=Moderator

# ==============================================
# PRODUCTION SETTINGS
# ==============================================

# Enable/disable features
ENABLE_SEARCH=true
ENABLE_BULK_OPERATIONS=true
ENABLE_STATISTICS=true

# Performance settings
CACHE_SIZE_MB=100
MAX_CONCURRENT_UPLOADS=5
MAX_CONCURRENT_DOWNLOADS=10

# Monitoring settings
ENABLE_METRICS=true
LOG_RETENTION_DAYS=30
